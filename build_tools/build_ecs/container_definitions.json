[
    {
      "name": "wordpress",
      "image": "${aws_account_id}.dkr.ecr.ap-northeast-1.amazonaws.com/wordpress:latest",
      "memoryReservation": 256,
      "essential": true,

      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        }
      ],

      "hostname": "127.0.0.1"

    },
    {
      "name": "mysql",
      "image": "${aws_account_id}.dkr.ecr.ap-northeast-1.amazonaws.com/mysql:5.7",
      "memoryReservation": 256,
      "essential": true,

      "portMappings": [
        {
          "hostPort": 3306,
          "protocol": "tcp",
          "containerPort": 3306
        }
      ],
    
      "environment": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "root_pass"
        },
        {
          "name": "MYSQL_DATABASE",
          "value": "wordpress"
        },
        {
          "name": "MYSQL_USER",
          "value": "wordpress"
        },
        {
          "name": "MYSQL_PASSWORD",
          "value": "wordpress"
        }
      ]
    }
  ]