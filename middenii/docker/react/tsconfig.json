{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES6",
        "module": "ES2020",
        "jsx": "react",
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,    
        "moduleResolution": "node",
        "typeRoots": ["./typings", "node_modules/@types"],
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": ["**/*.js"],
    "exclude": ["node_modules"]
}